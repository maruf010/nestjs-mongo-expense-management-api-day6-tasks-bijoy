{
  "info": {
    "name": "Expense Management API",
    "description": "NestJS + MongoDB Expense Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Categories",
      "item": [
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Food & Dining\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/categories",
              "host": ["{{baseUrl}}"],
              "path": ["categories"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/categories?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["categories"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Expenses",
      "item": [
        {
          "name": "Create Expense",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Grocery Shopping\",\n  \"amount\": 1500,\n  \"categoryId\": \"{{categoryId}}\",\n  \"date\": \"2025-10-15T07:00:00.000Z\",\n  \"note\": \"Weekly groceries from local market\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/expenses",
              "host": ["{{baseUrl}}"],
              "path": ["expenses"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Expenses",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/expenses?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["expenses"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Filter by Month",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/expenses?month=10&year=2025&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["expenses"],
              "query": [
                {
                  "key": "month",
                  "value": "10",
                  "description": "Month (1-12)"
                },
                {
                  "key": "year",
                  "value": "2025"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Filter by Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/expenses?categoryId={{categoryId}}&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["expenses"],
              "query": [
                {
                  "key": "categoryId",
                  "value": "{{categoryId}}"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Filter by Month & Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/expenses?month=10&year=2025&categoryId={{categoryId}}&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["expenses"],
              "query": [
                {
                  "key": "month",
                  "value": "10"
                },
                {
                  "key": "year",
                  "value": "2025"
                },
                {
                  "key": "categoryId",
                  "value": "{{categoryId}}"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Monthly Summary",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reports/summary?month=10&year=2025",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "summary"],
              "query": [
                {
                  "key": "month",
                  "value": "10",
                  "description": "Month (1-12)"
                },
                {
                  "key": "year",
                  "value": "2025"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "categoryId",
      "value": "paste-your-category-id-here",
      "type": "string"
    }
  ]
}
